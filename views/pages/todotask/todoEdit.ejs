<div class="todo-container">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1>To-Do List</h1>
            <div class="todo">
                <form action="" method="POST" class="todo-header">
                    <input type="text" name="content" placeholder="What will you do today?">
                    <button type="submit"><span class="fas fa-plus"></span></button>
                </form>
                <br>
                <hr/>
                <ul class="todo-list">
                    <% todoTasks.forEach(details => { %>
                        <% if (details._id == idTask) { %>
                            <li class="todo-list-item">
                                <form action="/todotask/edit/<%= details._id %>" method="POST">
                                    <input type="text" value="<%= details.content %>" name="content">
                                    <button type="submit">Confirm</button>
                                    <a href="/todotask" class="cancel">Cancel</a>
                                </form>
                            </li>
                            <% } else { %>
                                <li class="todo-list-item">
                                    <div class="todo-list-item-name">
                                        <%= details.content %>
                                    </div>
                                    <a href="todotask/edit/<%= details._id %>" class="edit"> <span class="fas fa-edit"></span>
                                    </a>
                                    <a href="todotask/remove/<%= details._id %>" class="remove"> <span class="fas fa-times"></span>
                                    </a>
                                </li>
                                <% } %>
                                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>